                    <span class="author mr-2"><img src="~/Content/images/me.jpg" alt="Colorlib" class="mr-2"></span>&bullet;
                   
                  
                </div>
                <h1 class="mb-4">@Model.Title</h1>


                <div class="post-content-body">
                    <p>
                        @Model.Content

                    </p>
                    <div class="row mb-5">
                        <div class="col-md-12 mb-4">
                            <img src="@Url.Content(Model.ArticleImages[0].Path)" alt="Image placeholder" class="img-fluid">
                        </div>

                    </div>
